#!/usr/bin/env bash
command -v jq >/dev/null 2>&1 || { echo >&2 "Program 'jq' required but it is not installed.
Aborting."; exit 1; }
command -v curl >/dev/null 2>&1 || { echo >&2 "Program 'curl' required but is not installed.
Aborting."; exit 1; }

# OpenWeather API ID
# weather[0]
#id   main          description                       icon code
